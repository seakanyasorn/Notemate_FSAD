<h1 class="title">Subjects</h1>

<div class="container">
  
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each do |subject| %>
        <tr>
          <td><%= subject.name %></td>
          <td>
            <%= link_to 'Edit', edit_subject_path(subject), class: 'btn btn-warning btn-sm' %>
          </td>
          <td>
            <%= link_to 'Delete', subject_path(subject), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- Added margin-top for more spacing between table and buttons -->
<div class="form-group mt-4 buttons-container">
  <%= link_to 'Back to Homepage', root_path, class: 'btn btn-primary' %>
  <%= link_to 'Create New Subject', new_subject_path, class: 'btn btn-primary' %>
</div>



</div>
